<UserControl x:Class="DotTrackingGame_Demo.GameMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DotTrackingGame_Demo"
             mc:Ignorable="d"  x:Name="GameMenuUC"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="GameMenuGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button Content="Play" Grid.Row="2" Grid.Column="1"  Width="100" Height="50" Background="Aqua" Click="OnPlay_Click" />
        <Button Content="Replay" Grid.Row="2" Grid.Column="3" Width="100" Height="Auto" Background="Aqua" Click="OnReplay_Click"/>

    </Grid>
</UserControl>
